const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>


  <!-- Pricing Widget ******************* -->

  <Prices
    title="Exemples de prix"
    subtitle="Comme on aime bien la transparence quelques exemples de coûts, adaptables suivant le contexte"
    prices={[
      {
        title: 'Technicien',
        subtitle: 'Scan 3D, Impression 3D',
        price: 70,
        period: 'par heure',
        items: [
          {
            description: 'Utilisation scan 3D, hors déplacement',
          },
          {
            description: 'Utilisation des machines d\'impression 3D',
          },
          {
            description: 'Utilisation de la CN',
          },
          {
            description: 'Post-traitement',
          },
        ],
      },
      {
        title: 'Ingénieur',
        subtitle: 'Conception, Pré-dimensionnement',
        price: 107,
        period: 'Par heure',
        items: [
          {
            description: 'Conception de produits, mise en place',
          },
          {
            description: 'Prédimensionnement en simulation numérique',
          },
          {
            description: 'Préparation de modèles pour la fabrication',
          },
          {
            description: 'Proposition de solutions innovantes',
          },
          {
            description: 'Optimisation topologique / lattices',
          },
        ],
        hasRibbon: true,
        ribbonTitle: 'populaire',
      },
      {
        title: 'Ingénieur expert',
        subtitle: 'Simulation avancée, IA',
        price: 150,
        period: 'Par heure',
        items: [
          {
            description: 'Veille R&D / Audits',
          },
          {
            description: 'Gestion et modélisation de la connaissance',
