---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Projet R&D général',
};
---

<Layout metadata={metadata}>

  <!-- Hero2 Widget ******************* -->

    <Hero2
    tagline="Projet de R&D"
    title="Signature des données pour la modélisation de la connaissance et les réseaux de neurones"
    subtitle="Recherche expérimentale visant à proposer un procédé numérique innovant de langage technique permettant d’assister l’ingénieur dans la construction de sa maquette numérique dans le contexte de la modélisation de connaissance et du jumeau numérique. Les incertitudes du modèle proposé sont analysées dans le cadre d’un prototype R&D permettant d’utiliser le langage technique dans un premier temps pour les jumeaux numériques connectés à une modélisation 3D (CAO et simulation numérique)."
    image={{
      src: '~/assets/images/gne.png',
      alt: 'Store with a Coming Soon sign. Pre-launch Landing Page'
    }}
    />
  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'JEI',
        description:
          'XiLAB3d+ a obtenu le statut de Jeune Entreprise Innovante (JEI) pour nos travaux de recherche sur la modélisation de la connaissance pour les jumeaux numériques',
        icon: 'tabler:wand',
      },
    ]}
    image={{
      src: '~/assets/images/JEI.png',
      alt: 'Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Jeune Entreprise Innovante</h3>
    </Fragment>
  </Content>


  <CallToAction
    title="Je prends contact"
    subtitle="Ce projet m'intéresse j'aimerai en savoir plus"
    actions={[
      {
        variant: 'primary',
        text: 'Je prends contact',
        href: '/contact',
        icon: 'tabler:download',
      },
    ]}
  />

</Layout>
