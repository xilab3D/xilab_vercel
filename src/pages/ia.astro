---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Projet R&D général',
};
---

<Layout metadata={metadata}>

  <!-- Hero2 Widget ******************* -->

    <Hero2
    tagline="Projet de R&D"
    title="Matériaux architecturés"
    subtitle="Recherche et applications industrielles sur la modélisation de matériaux architecturés répondant à différents chargements (mécaniques, thermiques, ...) grâce à l'optimimisation topologique et la modélisation de lattices. 2 outils partenaires sont utilisés pour nos applications : Optistruct d'Altair en partenariat avec SoftPower et 4D-Additive de Coretechnologie."
    image={{
      src: '~/assets/images/Lattices_4DA.JPG',
      alt: 'Store with a Coming Soon sign. Pre-launch Landing Page'
    }}
    />
    actions={[
      { variant: 'primary', text: 'Optistruct', href: 'https://softpower-sas.fr/', icon: 'tabler:square-rounded-arrow-right' },
      { variant: 'primary', text: '4D-Additive', href: 'https://coretechnologie.com/products/4d-additive/', icon: 'tabler:square-rounded-arrow-right' },
    ]}

</Layout>
