  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Simerics-MP et Simerics-MP+"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Plaquette', icon: 'tabler:download', href: 'https://www.canva.com/design/DAGkWLh486E/oQsN_61q0dMFBtfVU95unA/view?utm_content=DAGkWLh486E&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h5eaa450e13' },
