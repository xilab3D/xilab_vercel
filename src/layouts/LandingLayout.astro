---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

import { headerData } from '~/navigation';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
---

<PageLayout metadata={metadata}>
  <Fragment slot="announcement">
    <slot name="announcement" />
  </Fragment>
  <Fragment slot="header">
    <slot name="header">
      <Header
        links={headerData?.links[2] ? [headerData.links[2]] : undefined}
        actions={[
          {
            text: 'Plaquette',
            href: 'https://www.canva.com/design/DAGhr2chqNo/BLVH6Dr5YfNEosD3B3JugQ/view?utm_content=DAGhr2chqNo&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h0477d42f10',
          },
        ]}
        showToggleTheme
        position="right"
      />
    </slot>
  </Fragment>
  <slot />
</PageLayout>
